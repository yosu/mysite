<h1>Show Post</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

  <li>
    <strong>Views:</strong>
    <%= @post.views %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.cms_post_path(@conn, :edit, @post) %></span>
<span><%= link "Back", to: Routes.cms_post_path(@conn, :index) %></span>
